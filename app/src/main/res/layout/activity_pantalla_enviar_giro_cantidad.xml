<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo"
    app:layout_constrainedHeight="true"
    app:layout_constrainedWidth="true"
    tools:context="co.com.netcom.corresponsal.pantallas.corresponsal.usuarioComun.transacciones.giros.enviar.pantallaEnviarGiroCantidad">

    <FrameLayout
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@id/guideline45"
        app:layout_constraintEnd_toStartOf="@id/guideline47"
        app:layout_constraintStart_toEndOf="@id/guideline46"
        app:layout_constraintTop_toBottomOf="@id/guideline44"
        android:id="@+id/contenedorHeaderGirosEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

            <TextView
                app:layout_constraintBottom_toTopOf="@id/guideline45"
                app:layout_constraintVertical_bias="0.04"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toStartOf="@id/guideline47"
                app:layout_constraintStart_toEndOf="@id/guideline46"
                app:layout_constraintTop_toBottomOf="@id/contenedorHeaderGirosEnviar"
                android:id="@+id/textView_GirosEnviar"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/textView_GirosEnviar"
                android:textColor="@color/azul"
                android:textSize="21dp" />

            <EditText
                app:layout_constraintBottom_toTopOf="@id/guideline45"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintVertical_bias="0.25"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toStartOf="@id/guideline47"
                app:layout_constraintStart_toEndOf="@id/guideline46"
                app:layout_constraintTop_toBottomOf="@id/textView_GirosEnviar"
                android:id="@+id/editText_CantidadGirosEnviar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/input_form"
                android:fontFamily="@font/quicksand_bold"
                android:hint="@string/editText_CantidadGirosEnviar"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:numeric="integer"
                android:paddingStart="23dp"
                android:textColor="@color/azul"
                android:textColorHint="@color/azul"
                android:textSize="21dp" />


                <TextView
                    app:layout_constraintBottom_toTopOf="@id/guideline45"
                    android:layout_marginStart="70dp"
                    app:layout_constraintVertical_bias="0.07"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/guideline46"
                    app:layout_constraintTop_toBottomOf="@id/editText_CantidadGirosEnviar"
                    android:id="@+id/textView_terminosEnviarGiro"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/textView_terminos"
                    android:textColor="@color/azul"
                    android:textSize="17dp" />


                <Switch
                    app:layout_constraintBottom_toTopOf="@id/guideline45"
                    app:layout_constraintHeight_percent="0.03"
                    app:layout_constraintVertical_bias="0.07"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@id/textView_terminosEnviarGiro"
                    app:layout_constraintTop_toBottomOf="@id/editText_CantidadGirosEnviar"
                    android:id="@+id/switch_EnviarGiro"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:thumb="@drawable/sw_thumb"
                    android:track="@drawable/sw_track" />


            <Button
                app:layout_constraintHeight_percent="0.095"
                app:layout_constraintBottom_toTopOf="@id/guideline45"
                app:layout_constraintVertical_bias="0.35"
                app:layout_constraintEnd_toStartOf="@id/guideline47"
                app:layout_constraintStart_toEndOf="@id/guideline46"
                app:layout_constraintTop_toBottomOf="@id/textView_terminosEnviarGiro"
                android:id="@+id/button_ContinuarGirosEnviar"
                android:layout_width="138dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/boton_inicio"
                android:fontFamily="@font/quicksand_regular"
                android:onClick="continuarCantidad"
                android:text="@string/button_ContinuarGirosEnviar"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="20dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>