<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.netcom.corresponsal.pantallas.corresponsal.usuarioComun.transacciones.giros.enviar.pantallaEnviarGiroCantidad"
    android:background="@drawable/fondo"
    android:layout_gravity="center_horizontal"
    >
<FrameLayout
    android:id="@+id/contenedorHeaderGirosEnviar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contenedorHeaderGirosEnviar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        
            <TextView
                android:id="@+id/textView_GirosEnviar"
                android:layout_width="210dp"
                android:layout_height="55dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="33dp"
                android:text="@string/textView_GirosEnviar"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/azul"
                android:textSize="21dp"/>

            <EditText
                android:id="@+id/editText_CantidadGirosEnviar"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/input_form"
                android:hint="@string/editText_CantidadGirosEnviar"
                android:inputType="number"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="21dp"
                android:textColorHint="@color/azul"
                android:paddingStart="23dp"/>

        <Button
            android:id="@+id/button_ContinuarGirosEnviar"
            android:layout_width="138dp"
            android:layout_height="67dp"
            android:background="@drawable/boton_inicio"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:text="@string/button_ContinuarGirosEnviar"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="20dp"
            android:layout_marginTop="152dp"
            android:layout_gravity="center_horizontal"
            android:onClick="continuarCantidad"/>


        </LinearLayout>


    </ScrollView>




</RelativeLayout>