<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    app:layout_constrainedWidth="true"
    app:layout_constrainedHeight="true"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.recargas.pantallaRecargaCelular">

    <FrameLayout
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toTopOf="@id/guideline97"
        app:layout_constraintEnd_toStartOf="@id/guideline99"
        app:layout_constraintStart_toEndOf="@id/guideline98"
        app:layout_constraintTop_toBottomOf="@id/guideline96"
        android:id="@+id/contenedorHeaderPantallaRecargaCelular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintBottom_toTopOf="@id/guideline97"
        app:layout_constraintEnd_toStartOf="@id/guideline99"
        app:layout_constraintStart_toEndOf="@id/guideline98"
        app:layout_constraintTop_toBottomOf="@id/contenedorHeaderPantallaRecargaCelular"
        android:id="@+id/textView_RecargasCelular"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/quicksand_regular"
        android:text="@string/textView_RecargasCelular"
        android:textColor="@color/azul"
        android:textSize="21dp" />

    <EditText
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toTopOf="@id/guideline97"
        app:layout_constraintEnd_toStartOf="@id/guideline99"
        app:layout_constraintStart_toEndOf="@id/guideline98"
        app:layout_constraintTop_toBottomOf="@id/textView_RecargasCelular"
        android:id="@+id/editText_RecargasCelular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/input_form"
        android:fontFamily="@font/quicksand_regular"
        android:hint="@string/editText_RecargasCelular"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:numeric="integer"
        android:paddingStart="23dp"
        android:textColor="@color/azul"
        android:textColorHint="@color/azul"
        android:textSize="21dp" />

    <Button
        app:layout_constraintBottom_toTopOf="@id/guideline97"
        app:layout_constraintHeight_percent="0.095"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintEnd_toStartOf="@id/guideline99"
        app:layout_constraintStart_toEndOf="@id/guideline98"
        app:layout_constraintTop_toBottomOf="@id/editText_RecargasCelular"
        android:id="@+id/button_RecargasCelularContinuar"
        android:layout_width="138dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boton_inicio"
        android:fontFamily="@font/quicksand_bold"
        android:onClick="recargasCelularContinuar"
        android:text="@string/button_RecargasContinuar"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        android:textSize="20dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuRecargas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_fondo"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/azul"
        app:itemTextColor="@color/azul"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintTop_toBottomOf="@id/button_RecargasCelularContinuar"
        app:layout_constraintBottom_toTopOf="@id/guideline97"
        app:layout_constraintStart_toEndOf="@id/guideline98"
        app:layout_constraintEnd_toStartOf="@id/guideline99"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/menu_home" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline96"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>