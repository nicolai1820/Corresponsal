<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/botonAdministrador"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/boton_home"
        android:clickable="false"
        android:elevation="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="157dp"
            android:layout_height="94dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-6dp"
            android:adjustViewBounds="false"
            android:contentDescription="Logo Redeban"
            android:onClick="irAAdministrador"
            android:src="@mipmap/netcom_admin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/texto_home"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|center_vertical"
            android:text="Administrador"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/netcom_blanco"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botonConfiguracion"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/boton_home"
        android:clickable="false"
        android:elevation="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:layout_width="157dp"
            android:layout_height="94dp"
            android:layout_marginBottom="-6dp"
            android:adjustViewBounds="false"
            android:contentDescription="Logo Redeban"
            android:onClick="irAConfiguracion"
            android:src="@mipmap/netcom_settings" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/texto_home"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|center_vertical"
            android:text="ConfiguraciÃ³n"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/netcom_blanco"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botonOtras"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/boton_home"
        android:clickable="false"
        android:elevation="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAdministrador">


        <ImageView
            android:layout_width="157dp"
            android:layout_height="94dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-6dp"
            android:adjustViewBounds="false"
            android:contentDescription="Logo Redeban"
            android:onClick="irAOtrasTransacciones"
            android:src="@mipmap/netcom_card_pay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/texto_home"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|center_vertical"
            android:text="Otras trans."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/netcom_blanco"></TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/botonFlujoUnificado"
        android:layout_width="150dp"
        android:layout_height="126dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/boton_home"
        android:clickable="false"
        android:elevation="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:longClickable="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonConfiguracion">


        <ImageView
            android:layout_width="157dp"
            android:layout_height="94dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-6dp"
            android:adjustViewBounds="false"
            android:contentDescription="Logo Redeban"
            android:onClick="vender"
            android:src="@mipmap/netcom_payment" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/texto_home_verde"
            android:fontFamily="@font/montserrat"
            android:gravity="center_horizontal|center_vertical"
            android:text="Flujo Unificado"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/netcom_blanco"></TextView>


    </RelativeLayout>

    <TextView
        android:id="@+id/textoBienvenida"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/bienvenida"
        android:textAlignment="center"
        android:textColor="@color/netcom_texto_azul"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="168dp" />


</androidx.constraintlayout.widget.ConstraintLayout>