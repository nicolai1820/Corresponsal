<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:background="@drawable/fondo_pop_up"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_PopUp_Error"
            android:layout_marginTop="40dp"
            android:textColor="@color/azul"
            android:textSize="22dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/button_PopUpSalirError"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="67dp"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:background="@drawable/boton_inicio"
                android:text="@string/button_PopUpSalir"
                android:textSize="19dp"
                android:fontFamily="@font/quicksand_bold"
                />

            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/button_PopUpVolverIntentar"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="67dp"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:background="@drawable/boton_inicio"
                android:text="@string/button_PopUpIntentarNuevamente"
                android:textSize="19dp"
                android:fontFamily="@font/quicksand_bold"/>




        </LinearLayout>

    </LinearLayout>


</RelativeLayout>