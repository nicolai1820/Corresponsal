<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.giros.cancelar.pantallaCancelarGiroDatosGirador"
    android:background="@drawable/fondo"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/contenedorHeaderCancelarGiroDatosGirador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_below="@+id/contenedorHeaderCancelarGiroDatosGirador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="167dp"
                android:layout_height="60dp"
                android:fontFamily="@font/quicksand_regular"
                android:textColor="@color/azul"
                android:textSize="21dp"
                android:text="@string/textView_CancelarGiroDatosGirador"
                android:layout_marginStart="36dp"
                android:layout_marginTop="38dp"/>

            <Spinner
                android:id="@+id/spinner_tipoDocumentoGiradorCancelarGiro"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="68dp"
                android:paddingStart="23dp"
                android:background="@null"
                android:foreground="@drawable/spinner_style"
                android:overlapAnchor="false"
                />

            <EditText
                android:id="@+id/editText_DocumentoGiradorCancelarGiro"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/input_form"
                android:fontFamily="@font/quicksand_bold"
                android:hint="@string/editText_CancelarGiroNumeroDocumentoGirador"
                android:inputType="number"
                android:numeric="integer"
                android:paddingStart="23dp"
                android:textColorHint="@color/azul"
                android:textSize="21dp"
                android:imeOptions="actionDone"
                android:textColor="@color/azul"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/textView_terminosCancelarGiro"
                    android:layout_width="190dp"
                    android:layout_height="20dp"
                    android:textColor="@color/azul"
                    android:textSize="17dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/textView_terminos"
                    android:layout_marginTop="35dp"/>


                <Switch
                    android:id="@+id/switch_CancelarGiro"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/sw_thumb"
                    android:track="@drawable/sw_track"
                    android:gravity="center"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:layout_marginBottom="10dp"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/button_ContinuarDatosGiradorCancelarGiro"
                android:layout_width="138dp"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/boton_inicio"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/button_CancelarGirosDatosGiradorContinuar"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:onClick="continuarDatosGiradorCancelarGiro"/>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>