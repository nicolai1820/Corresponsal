<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.com.netcom.corresponsal.pantallas.corresponsal.administrador.inicio.pantallaDuplicado">

    <FrameLayout
        android:id="@+id/contenedorHeaderPantallaServiciosAdministrador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<ScrollView
    android:layout_below="@id/contenedorHeaderPantallaServiciosAdministrador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:textSize="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/azul"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:text="@string/textView_SaludoAdministrado"
            />
        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textColor="@color/azul"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="19dp"
            android:text="@string/textView_bienvenidaAdministrador"
            android:layout_marginStart="36dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="42dp"
            >
            
            <Button
                android:id="@+id/button_preguntasFrecuentesAdministrador"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="117dp"
                android:background="@drawable/input_form"
                android:text="@string/button_pantallaInicialAdministradorPreguntasFrecuentes"
                android:textSize="19dp"
                android:drawableTop="@drawable/interrogacion"
                android:paddingTop="25dp"
                android:paddingBottom="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/azul"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/button_soporteAdministrador"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="117dp"
                android:background="@drawable/input_form"
                android:textColor="@color/azul"
                android:text="@string/button_pantallaInicialAdministradorSoporte"
                android:textAllCaps="false"
                android:textSize="19dp"
                android:layout_marginEnd="36dp"
                android:drawableTop="@drawable/soporte"
                android:paddingTop="25dp"
                android:paddingBottom="17dp"
                android:fontFamily="@font/quicksand_bold"
                />
        </LinearLayout>
        
        <Button
            android:id="@+id/button_cerrarSesionAdministrador"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:background="@drawable/input_form"
            android:textAllCaps="false"
            android:textSize="19dp"
            android:fontFamily="@font/quicksand_bold"
            android:drawableTop="@drawable/cerrar_sesion"
            android:paddingTop="25dp"
            android:paddingBottom="15dp"
            android:text="@string/button_pantallaInicialAdministradorCerrarSesion"
            android:textColor="@color/azul"/>



    </LinearLayout>


</ScrollView>


</RelativeLayout>