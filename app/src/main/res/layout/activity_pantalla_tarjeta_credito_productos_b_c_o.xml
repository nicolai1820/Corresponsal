<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.pagoProductosBCO.tarjetaCredito.pantallaTarjetaCreditoProductosBCO"
    android:background="@drawable/fondo"
    android:layout_gravity="center_horizontal"
    >

    <FrameLayout
        android:id="@+id/contenedorHeaderTarjetaCreditoProductosBCO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contenedorHeaderTarjetaCreditoProductosBCO">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:textColor="@color/azul"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="21dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="38dp"
            android:text="@string/textView_TarjetaDeCreditoPagoProductosBCO"/>


        <EditText
            android:id="@+id/editText_TarjetaDeCreditoPagoProductosBCONumero"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="87dp"
            android:background="@drawable/input_form"
            android:hint="@string/editText_TarjetaDeCreditoPagoProductosBCONumero"
            android:inputType="number"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="21dp"
            android:textColorHint="@color/azul"
            android:paddingStart="23dp"
            />

            <EditText
                android:id="@+id/editText_TarjetaDeCreditoPagoProductosBCOCantidad"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/input_form"
                android:hint="@string/editText_TarjetaDeCreditoPagoProductosBCOCantidad"
                android:inputType="number"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="21dp"
                android:textColorHint="@color/azul"
                android:paddingStart="23dp"
                />

            <Button
                android:id="@+id/button_TarjetaDeCreditoPagoProductosBCOContinuar"
                android:layout_width="138dp"
                android:layout_height="67dp"
                android:background="@drawable/boton_inicio"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:text="@string/button_TarjetaDeCreditoPagoProductosBCOContinuar"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="20dp"
                android:layout_marginTop="118dp"
                android:layout_gravity="center_horizontal"
                android:onClick="TarjetaDeCreditoPagoProductosBCOContinuar"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>