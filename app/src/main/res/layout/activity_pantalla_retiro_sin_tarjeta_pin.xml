<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.retiro.sinTarjeta.pantallaRetiroSinTarjetaPin"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo">

    <FrameLayout
        android:id="@+id/contenedorHeaderRetiroSinTarjetaPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ScrollView
        android:layout_below="@id/contenedorHeaderRetiroSinTarjetaPin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="282dp"
                android:layout_height="60dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="33dp"
                android:textColor="@color/azul"
                android:textSize="21dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/textView_RetiroSinTarjetaPin"/>

            <EditText
                android:id="@+id/editText_RetiroSinTarjetaPin"
                android:textSize="21dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColorHint="@color/azul"
                android:paddingStart="23dp"
                android:hint="@string/editText_RetiroSinTarjetaPin"
                android:inputType="number"
                android:background="@drawable/input_form"
                android:layout_marginTop="137dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="36dp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:imeOptions="actionDone"/>
            
            <Button
                android:id="@+id/button_RetiroSinTarjetaPinVamos"
                android:layout_width="138dp"
                android:layout_height="67dp"
                android:background="@drawable/boton_inicio"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="143dp"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="20dp"
                android:text="@string/button_RetiroSinTarjetaPinVamos"
                android:layout_marginBottom="15dp"/>


            
        </LinearLayout>
        
    </ScrollView>
        
        
        
</RelativeLayout>