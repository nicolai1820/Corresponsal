<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.retiro.sinTarjeta.pantallaRetiroSinTarjetaPin"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo">

    <FrameLayout
        android:id="@+id/contenedorHeaderRetiroSinTarjetaPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ScrollView
        android:layout_below="@id/contenedorHeaderRetiroSinTarjetaPin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="282dp"
                android:layout_height="60dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="33dp"
                android:textColor="@color/azul"
                android:textSize="21dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/textView_RetiroSinTarjetaPin"/>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/ingrese_pin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                />


            
        </LinearLayout>
        
    </ScrollView>
        
        
        
</RelativeLayout>