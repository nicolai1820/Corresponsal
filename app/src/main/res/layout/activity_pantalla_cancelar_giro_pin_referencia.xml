<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.giros.cancelar.pantallaCancelarGiroPinReferencia"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/fondo">

    <FrameLayout
    android:id="@+id/contenedorHeaderCancelarGiroPinReferencia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@id/contenedorHeaderCancelarGiroPinReferencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="34dp"
                android:textColor="@color/azul"
                android:textSize="21dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/textView_CancelarGiroPinReferencia"
                />

            <EditText
                android:id="@+id/editText_CancelarGiroPinReferencia"
                android:layout_width="match_parent"
                android:layout_marginEnd="45dp"
                android:layout_height="49dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/input_form"
                android:fontFamily="@font/quicksand_bold"
                android:inputType="number"
                android:numeric="integer"
                android:paddingStart="23dp"
                android:textColorHint="@color/azul"
                android:textSize="21dp"
                android:hint="@string/editText_CancelarGiroPinReferencia"
                android:imeOptions="actionDone"
                android:textColor="@color/azul"
                />

            <Button
                android:id="@+id/button_CancelarGirosPinReferenciaContinuar"
                android:layout_width="138dp"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                android:background="@drawable/boton_inicio"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/button_CancelarGirosPinReferenciaContinuar"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="20dp"
                android:onClick="continuarPinReferenciaCancelarGiro"
                />




        </LinearLayout>





    </ScrollView>




</RelativeLayout>