<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.duplicado.pantallaInicialDuplicado"
    android:background="@drawable/fondo">


    <FrameLayout
        android:id="@+id/contenedorHeaderDuplicado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@id/contenedorHeaderDuplicado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/menuDuplicado">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginStart="36dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/tetxtView_Duplicado"
                android:textSize="19dp"/>

            <Button
                android:id="@+id/button_UltimoRecibo"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="36dp"
                android:layout_marginStart="36dp"
                android:background="@drawable/input_form"
                android:drawableTop="@drawable/ultimo_recibo"
                android:text="@string/button_ultimoRecibo"
                android:paddingTop="25dp"
                android:textAllCaps="false"
                android:textColor="@color/azul"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="19dp"
                android:paddingBottom="15dp"/>

            <Button
                android:id="@+id/button_OtroRecibo"
                android:layout_marginEnd="36dp"
                android:layout_marginStart="36dp"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="@drawable/input_form"
                android:layout_marginTop="12dp"
                android:drawableTop="@drawable/recibo"
                android:textSize="19dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/button_otroRecibo"
                android:textAllCaps="false"
                android:textColor="@color/azul"
                android:paddingBottom="15dp"
                android:paddingTop="25dp"
                android:layout_marginBottom="15dp"/>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuDuplicado"
        android:background="@drawable/menu_fondo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:itemIconTint="@color/azul"
        app:itemTextColor="@color/azul"
        android:layout_alignParentBottom="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:menu="@menu/menu_home"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:itemIconSize="35dp"
        app:labelVisibilityMode="unlabeled" />


</RelativeLayout>