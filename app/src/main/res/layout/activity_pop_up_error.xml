<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutPopUpContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp"
    android:layout_marginTop="20dp"
    app:layout_goneMarginEnd="20dp"
    android:padding="20dp"
    android:background="@drawable/fondo_pop_up">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView_PopUp"
                android:text="@string/textView_PopUp"
                android:layout_marginTop="30dp"
                android:textColor="@color/azul"
                android:textSize="21dp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                >

                <Button
                    android:clickable="true"
                    android:id="@+id/button_PopUpSalir"
                    android:layout_width="138dp"
                    android:layout_height="67dp"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:background="@drawable/boton_inicio"
                    android:text="@string/button_PopUpSalir"
                   android:textSize="19dp"
                    android:fontFamily="@font/quicksand_regular"
                    />




            </LinearLayout>

        </LinearLayout>





</RelativeLayout>