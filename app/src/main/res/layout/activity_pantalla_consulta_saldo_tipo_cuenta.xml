<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallas.corresponsal.usuarioComun.transacciones.consultaSaldo.pantallaConsultaSaldoTipoCuenta"
    android:background="@drawable/fondo">


    <FrameLayout
        android:id="@+id/contenedorHeaderPantallaConsultaSaldoTipoCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_below="@id/contenedorHeaderPantallaConsultaSaldoTipoCuenta"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="40dp"
                android:layout_marginStart="36dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:textSize="19dp"
                android:fontFamily="@font/quicksand_regular"
                android:text="@string/textView_pantallaConsultaSaldoCuenta"/>


            <Spinner
                android:id="@+id/spinner_tipoDeCuentaConsultaSaldo"
                android:layout_width="match_parent"
                android:layout_marginEnd="45dp"
                android:layout_height="49dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="140dp"
                android:paddingStart="23dp"
                android:background="@null"
                android:foreground="@drawable/spinner_style"
                android:overlapAnchor="false"
                />

            <Button
                android:onClick="continuarConsultaSaldo"
                android:id="@+id/button_ContinuarConsultaSaldo"
                android:layout_width="138dp"
                android:layout_height="67dp"
                android:background="@drawable/boton_inicio"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="143dp"
                android:layout_marginBottom="15dp"
                android:text="@string/button_pantallaConsultaSaldoCCuentaContinuar"
                android:textColor="@color/blanco"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="20dp"
                />



        </LinearLayout>




    </ScrollView>





</RelativeLayout>