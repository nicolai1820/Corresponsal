<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextAppearance.MenuDialog.Item" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dialog_item_spacing</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/dialog_item_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/dialog_item_image_spacing</item>
    </style>
    <style name="ToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/netcom_blanco</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:subtitleTextColor" tools:ignore="NewApi">@color/netcom_blanco</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="ValorStyle" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/netcom_texto_azul</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
